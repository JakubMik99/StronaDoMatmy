}
<h1 class="border-bottom border-5">Figury i bryły geometryczne</h1>
<div class="border text-center">

<div>
    <h4>Kwadrat</h4>
    <div class="container border-bottom">
        <div class="row ">
            <div class="col">
             <form asp-page-handler="ObliczKwadrat" method="post" > 
                Długośc boku <br>
                <input type="text" asp-for="Figura.KwadratBok" placeholder="Długość boku" class="border border-dark"/><br>
                Długość przekątnej <br>
                <input type="text" asp-for="Figura.KwadratPrzekatna" placeholder="Długość przekątnej" class="border border-dark"/><br><br>
                <button class="btn btn-outline-primary text-black border-dark" type="submit">Oblicz</button><br><br>
                </form>
            </div>
            <div class="col">
            <span style="white-space: pre-line">
                @ViewData["kwadrat"]
            </span>
            </div>
  </div>
</div>
</div>
